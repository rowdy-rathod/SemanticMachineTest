<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutNameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_with_16"
            android:layout_marginTop="@dimen/margin_with_12"
            android:layout_marginRight="@dimen/margin_with_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTextViewName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_with_16"
                android:layout_weight="0.1"
                android:singleLine="true"
                android:text="@string/hint_name"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="@dimen/margin_with_20"
                android:layout_height="@dimen/margin_with_20"
                android:layout_marginRight="@dimen/margin_with_10"
                android:src="@drawable/square_edit_outline" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="@dimen/margin_with_20"
                android:layout_height="@dimen/margin_with_20"
                android:layout_marginRight="@dimen/margin_with_10"
                android:src="@drawable/ic_baseline_delete_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutClientNameContainer"
            android:layout_marginLeft="@dimen/margin_with_16"
            android:layout_marginRight="@dimen/margin_with_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="Birth                - "
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mTextViewBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.1"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutOtherProgramm"
            android:layout_marginLeft="@dimen/margin_with_16"
            android:layout_marginRight="@dimen/margin_with_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="Age                  - "
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mTextViewAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.1"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutOtherProgramm"
            android:layout_marginLeft="@dimen/margin_with_16"
            android:layout_marginRight="@dimen/margin_with_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="Parent Name  - "
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mTextViewParentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.1"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/tabs_bottom_line" />
    </LinearLayout>
</RelativeLayout>
