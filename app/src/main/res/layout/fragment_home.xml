<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_with_16"
        android:layout_marginTop="@dimen/margin_with_16"
        android:layout_marginRight="@dimen/margin_with_16"
        android:background="@drawable/background_white"
        android:padding="@dimen/margin_with_16">

        <TextView
            android:id="@+id/mTextViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunil Pundlik Rathod"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/mLayoutBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mTextViewName"
            android:layout_marginTop="@dimen/margin_with_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="Birth                - "
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <EditText
                android:cursorVisible="false"
                android:textColor="@color/color_999999"
                android:id="@+id/mEditDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_with_8"
                android:background="@drawable/edit_text_box"
                android:padding="@dimen/margin_with_6"
                android:focusable="false"
                android:inputType="date"
                android:singleLine="true"
                android:text="03/07/1994" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLayoutAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLayoutBirth"
            android:layout_marginTop="@dimen/margin_with_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="Age                  - "
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <EditText
                android:cursorVisible="false"
                android:id="@+id/mEditAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/color_999999"
                android:singleLine="true"
                android:layout_marginTop="@dimen/margin_with_8"
                android:background="@drawable/edit_text_box"
                android:padding="@dimen/margin_with_6"
                android:text="26" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLayoutDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLayoutAge"
            android:layout_marginTop="@dimen/margin_with_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="Department    - "
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mTextViewBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.1"
                android:singleLine="true"
                android:text="IT Software"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/mLayoutDesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLayoutDepartment"
            android:layout_marginTop="@dimen/margin_with_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="Designation    - "
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.1"
                android:singleLine="true"
                android:text="Software Engineering"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLayoutDesignation"
            android:layout_marginTop="@dimen/margin_with_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="Email                - "
                android:textColor="#333333"
                android:textSize="@dimen/text_size_14"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.1"
                android:singleLine="true"
                android:text="srp.sunil1994@gmail.com"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>